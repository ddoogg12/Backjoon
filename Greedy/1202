#보석 도둑

import heapq

n ,k = map(int, input().split())

bosuk= []    #보석
bag  = []    #가방
result = 0   #최대합

#보석 정보 담기
for _ in range(n):
	heapq.heappush(bosuk, list(map(int, input().split())))

#가방 정보 담기
for _ in range(k):
	data = int(input())
	bag.append(data)

bosuk.sort(key=lambda x: (-x[1]))
bag.sort()

for i in range(len(bosuk)):
	for j in range(len(bag)):
		if bosuk[i][0] <= bag[j]:
			result += bosuk[i][1]
			heapq.heappop(bag)
			break
	if len(bag) == 0:
		break

print(result)
